<style>
  .fade {
  opacity: 0;
  transition: opacity 0.5s;
}

#carousel-image {
  opacity: 1;
  transition: opacity 0.5s;
}
</style>

<img src="/lf-1.jpeg" alt="" width="650"
  height="450" class="mx-auto aspect-video overflow-hidden rounded-xl object-cover sm:w-full lg:order-last" id="carousel-image">

<script>
  const imagesUrls = [
    "/lf-2.jpg",
    "/lf-3.jpg",
    "/lf-4.jpg",
    "/lf-5.jpg",
    "/lf-6.jpg",
    "/lf-7.jpg",
    "/lf-8.jpg",
    "/lf-9.jpg",
  ];

  let currentIndex = 0;
  const carouselImage = document.getElementById("carousel-image") as HTMLImageElement;
  
  function changeImage() {
    if (carouselImage) {
      carouselImage.classList.add("fade");
      setTimeout(() => {
        carouselImage.src = imagesUrls[currentIndex];
        carouselImage.classList.remove("fade");
        currentIndex = (currentIndex + 1) % imagesUrls.length;
      }, 500); // Tempo da transição em milissegundos
    }
  }
  
  setInterval(changeImage, 2000);
</script>